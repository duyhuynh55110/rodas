[
    {
        "name": "${server_container_name}",
        "image": "${server_image_uri}",
        "memoryReservation": 128,
        "memory": 128,
        "cpu": 128,
        "essential": true,
        "readonlyRootFilesystem": true,
        "links": [],
        "command": [],
        "entryPoint": [],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "/ecs/task-definition-${family}",
                "awslogs-region": "${region}",
                "awslogs-stream-prefix": "ecs"
            }
        },
        "portMappings": [
            {
                "containerPort": 80,
                "hostPort": 80,
                "protocol": "tcp"
            }
        ]
    },
    {
        "name": "${admin_container_name}",
        "image": "${admin_image_uri}",
        "memoryReservation": 256,
        "memory": 256,
        "cpu": 128,
        "essential": true,
        "readonlyRootFilesystem": true,
        "links": [],
        "command": [],
        "entryPoint": [],
        "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
                "awslogs-group": "/ecs/task-definition-${family}",
                "awslogs-region": "${region}",
                "awslogs-stream-prefix": "ecs"
            }
        },
        "portMappings": [
            {
                "containerPort": 9000,
                "hostPort": 9000,
                "protocol": "tcp"
            }
        ]
    }
